@model List<OfferSuite.Model.InventoryModel>

@if(Model.Count() != 0){
    <div class="inventory-wrapper">

    </div>
} else {
    <div class="inventory-wrapper">

        <nav class="inventory-navbar">
            <p>
                Add
            </p>
            <p>
                View
            </p>
        </nav>

        <h2>Add New Vehicle</h2>

        <form action="/submit-inventory" method="post">
        
            <label style="display:none;" for="id">ID:</label>
            <input style="display:none;" type="number" id="id" name="Id"><br><br>

            <label for="make">Make:</label>
            <input type="text" id="make" name="Make"><br><br>

            <label for="model">Model:</label>
            <input type="text" id="model" name="Model"><br><br>

            <label for="year">Year:</label>
            <input type="number" id="year" name="Year"><br><br>

            <label for="price">Price:</label>
            <input type="number" step="0.01" id="price" name="Price"><br><br>

            <label for="mileageMil">Mileage (miles):</label>
            <input type="number" id="mileageMil" name="MileageMil"><br><br>

            <label for="fuelType">Fuel Type:</label>
            <input type="text" id="fuelType" name="FuelType"><br><br>

            <label for="transmission">Transmission:</label>
            <input type="text" id="transmission" name="Transmission"><br><br>

            <label for="bodyType">Body Type:</label>
            <input type="text" id="bodyType" name="BodyType"><br><br>

            <label for="color">Color:</label>
            <input type="text" id="color" name="Color"><br><br>

            <label for="description">Description:</label><br>
            <textarea id="description" name="Description" rows="4" cols="50"></textarea><br><br>

            <label for="imageUrls">Image URLs (comma-separated):</label>
            <input type="text" id="imageUrls" name="ImageUrls"><br><br>

            <label for="features">Features (comma-separated):</label>
            <input type="text" id="features" name="Features"><br><br>

            <input type="submit" value="Submit">
        </form>

    </div>
}

